<h2><%= @article.title %> <%= link_to edit_article_path(@article.id) do %>
  <i class="fas fa-edit" style="color: black"></i>
<% end %>
<%= link_to article_path(@article.id), method: :delete, data: { confirm: "Sure?"} do %>
<i class="fas fa-trash" style="color: black"></i>
<% end %>
</h2>
<hr>
<p><%= @article.content %></p>

